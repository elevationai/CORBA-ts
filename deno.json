{
  "name": "@eai/corba",
  "version": "1.3.0",
  "description": "A TypeScript implementation of CORBA 3.4 for Deno, providing Object Request Broker (ORB), GIOP/IIOP protocol support, and IDL mapping",
  "license": "MIT",
  "exports": "./mod.ts",
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns"]
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/**/*",
      "examples/**/*",
      "specs/**/*",
      "*.test.ts",
      "*_test.ts"
    ]
  },
  "fmt": {
    "lineWidth": 140,
    "proseWrap": "preserve",
    "nextControlFlowPosition": "nextLine",
    "exclude": ["docs/**"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["docs/**", "docs.config.json"]
  },
  "check": {
    "exclude": ["docs/**", "docs.config.json"]
  },
  "tasks": {
    "test": "deno test --allow-net --allow-read --allow-write"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/log": "jsr:@std/log@^0.224.0",
    "@std/jsonc": "jsr:@std/jsonc@^0.224.0",
    "@std/path": "jsr:@std/path@^0.224.0",
    "logging-ts": "../logging-ts/mod.ts"
  }
}
