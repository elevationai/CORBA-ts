{
  "name": "@eai/corba",
  "version": "1.0.2",
  "description": "A TypeScript implementation of CORBA 3.4 for Deno, providing Object Request Broker (ORB), GIOP/IIOP protocol support, and IDL mapping",
  "license": "MIT",
  "exports": "./mod.ts",
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns"]
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/**/*",
      "examples/**/*",
      "specs/**/*",
      "*.test.ts",
      "*_test.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": ["docs/**", "docs.config.json"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["docs/**", "docs.config.json"]
  },
  "check": {
    "exclude": ["docs/**", "docs.config.json"]
  },
  "tasks": {
    "test": "deno test --allow-net --allow-read --allow-write"
  }
}
